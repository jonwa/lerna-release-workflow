{
  "name": "lerna-release-workflow",
  "private": true,
  "author": "Lu√≠s Souza <luisfmsouza@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/luisfmsouza/lerna-release-workflow.git"
  },
  "workspaces": ["packages/*"],
  "scripts": {
    "commit": "git-cz",
    "bootstrap": "npx lerna bootstrap",
    "publish:ci": "lerna publish from-package --yes",
    "version:ci": "lerna version --yes --conventional-commits --create-release github --message 'chore(release): publish'"
  },
  "devDependencies": {
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.1.0",
    "lerna": "^4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
